<script>
var options=["Hi!", "Hello!", ":)", "Wat", "My dog died", "I ate your mum", "I love children", "Wait. What?", "Crap.", "The world is round", "How many atoms are in a person i wonder.", "lol", "Yes", "I like balls"]
function choose() {
  document.getElementById(';)').innerHTML = options[Math.floor(Math.random()*options.length)];
}
</script>
